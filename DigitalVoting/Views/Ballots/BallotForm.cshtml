@model DigitalVoting.ViewModels.BallotFormViewModel
@{
    ViewBag.Title = "BallotForm";
}

<h2>Ballot Form</h2>

@using (Html.BeginForm("Save", "Ballots"))
{
    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()
    //Me tin apo katw vlepw ti xreiazomai gia na ginei validate to modelo mou
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.BallotType)
        @Html.DropDownListFor(m => m.BallotType, new SelectList(Model.BallotTypes, "Id", "Name"), "--Select--", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.BallotType)
    </div>
    
    <button type="submit" class="btn btn-primary">Save</button>

}